{
        "extends": ["stylelint-config-standard", "stylelint-config-prettier", 
        "stylelint-order-config-standard"],
      
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "indentation": [
            "tab"
        ],
        "color-hex-case": "upper",
        "declaration-block-no-redundant-longhand-properties": [true, {"ignoreShorthands": ["grid-template"]}]
    }
}  